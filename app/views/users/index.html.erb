<h1 align = "center"> All Eph Now Users</h1>
<div align = "center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class = "row">
        <div class = "well col-md-4 col-md-offset-4">
          <li><%= link_to image_tag("wlogo.jpg", :alt => "image", :height => "35%", :width => "40%"), user_path(user) %> </li>
          <li class = "article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small> <%= pluralize(user.articles.count, "article") if user.articles %> </small>
          </li>
        </div>
      </div>
    </ul>



    <% end %>
  </div>